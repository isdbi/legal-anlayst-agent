# API Keys
OPENAI_API_KEY=

# Model Configuration
MODEL_NAME=gpt-4-turbo  # Options: gpt-4-turbo, gpt-3.5-turbo
TEMPERATURE=0  # 0 for more deterministic results, 0.7 for more creativity
EMBEDDING_MODEL=text-embedding-ada-002

# Directory Paths
VECTOR_DB_DIR=./legal_knowledge_base
LEGAL_DOCS_DIR=./legal_documents

# Document Processing
CHUNK_SIZE=1000  # Size of text chunks for vectorization
CHUNK_OVERLAP=200  # Overlap between chunks to maintain context

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Optional Features
ENABLE_SHARIAH_COMPLIANCE=true  # Set to false to disable Shariah compliance checks
MAX_TOKENS_PER_API_CALL=4000  # Limit token usage per API call

# Performance
NUM_SEARCH_RESULTS=5  # Number of similar documents to retrieve from vector DB